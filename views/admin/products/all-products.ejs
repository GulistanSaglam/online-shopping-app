<%- include('../../sharing/head', { pageTitle: 'All Products'}) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/product-management.js" defer></script>
</head>
<%- include('../../sharing/header') %>

<style>
 h1, h2, section, p{
    margin: 2rem 0;
    font-weight: normal;
 }
</style>

<body>
    <main>
     <h1>Product Administration</h1>
     <section>
        <h2>Manage Product</h2>
        <p>
            <a href="/admin/products/new" class="button">Add product</a>
        </p>
     </section>

     <section>
        <ul id="products-grid">
         <% for (const product of products) { %>
         <li>
           <%- include('product-item', {product : product}) %>
         </li>
         <% } %>
        </ul>
     </section>
    </main>

